{
  "manifest_version": 2,
  "name": "Form-O-Fill - The programmable form filler",
  "short_name": "Form-O-Fill",
  "description": "The programmable form filler for developers. Fill your forms using javascript functions.",
  "version": "1.6.1",
  "author": "formofillextension@gmail.com",
  "minimum_chrome_version": "33",
  "icons": { 
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "contextMenus",
    "notifications",
    "management",
    "http://*/",
    "https://*/"
  ],
  "commands": {
    "reload-form-o-fill-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+5",
        "mac": "Command+Shift+5"
      },
      "description": "reload the form-o-fill extension"
    }
  },
  "web_accessible_resources": [ "html/options.html" ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_title": "Form-O-Fill",
    "default_icon": "images/icon_19.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "jsBuild": [
        "vendor/jquery/jquery-2.1.3.min.js", 
        "vendor/chance.js/chance.js" ,
        "vendor/moment.js/moment-with-langs.js",
        "js/global.js",
        "js/content.js"
      ],
      "js": [ 
        "vendor/jquery/jquery-2.1.3.min.js", 
        "vendor/chance.js/chance.js",
        "vendor/moment.js/moment-with-langs.js",
        "js/debug/logger.js", 
        "js/global/utils.js", 
        "js/global/jsonf.js", 
        "js/global/rule.js", 
        "js/global/rules.js", 
        "js/global/storage.js", 
        "js/global/i18n.js",
        "js/global/libs.js",
        "js/content/form_errors.js", 
        "js/content/form_filler.js", 
        "js/content/form_extractor.js", 
        "js/content/extract_instrumentation.js",
        "js/content/context_menu.js",
        "js/content/content.js",
        "js/content/testing.js" 
      ],
      "css": [
        "css/content.css"
      ]
    }
  ],
  "options_page": "html/options.html",
  "background": {
    "scriptsBuild": [
      "vendor/jquery/jquery-2.1.3.min.js", 
      "vendor/chance.js/chance.js" ,
      "vendor/moment.js/moment-with-langs.js",
      "js/global.js",
      "js/background.js"
    ],
    "scripts": [
      "vendor/jquery/jquery-2.1.3.min.js", 
      "vendor/chance.js/chance.js" ,
      "vendor/moment.js/moment-with-langs.js",
      "js/debug/logger.js", 
      "js/global/jsonf.js", 
      "js/global/utils.js", 
      "js/global/storage.js", 
      "js/global/rule.js",
      "js/global/rules.js",
      "js/global/i18n.js",
      "js/global/libs.js", 
      "js/global/workflow.js", 
      "js/background/form_util.js",
      "js/background/changelog.js",
      "js/background/notification.js",
      "js/background/background.js",
      "js/background/context_menu.js",
      "js/background/testing.js"
    ],
    "persistent": false
  }
}
