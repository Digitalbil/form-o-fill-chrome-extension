{
  "manifest_version": 2,
  "name": "Form-O-Fill - The programmable form filler",
  "short_name": "Form-O-Fill",
  "description": "The programmable form filler for developers using javascript functions.",
  "version": "2.5.0",
  "author": "formofillextension@gmail.com",
  "minimum_chrome_version": "33",
  "icons": { 
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "contextMenus",
    "notifications",
    "http://*/",
    "https://*/",
    "<all_urls>"
  ],
  "web_accessible_resources": [ 
    "html/options.html"
  ],
  "externally_connectable": {
    "matches": [
      "*://form-o-fill.github.io/tutorial/*", 
      "http://localhost:4000/tutorial/*"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_title": "Form-O-Fill",
    "default_icon": "images/icon_19.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "jsBuild": [
        "vendor/jquery/jquery-2.1.4.min.js", 
        "js/global.js",
        "js/content.js"
      ],
      "js": [ 
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ]
    }
  ],
  "options_page": "html/options.html",
  "background": {
    "scriptsBuild": [
      "vendor/jquery/jquery-2.1.4.min.js", 
      "js/global.js",
      "js/background.js"
    ],
    "scripts": [
      "js/common.js",
      "js/background.js"
    ],
    "persistent": true
  }
}
