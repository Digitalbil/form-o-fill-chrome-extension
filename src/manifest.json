{
  "manifest_version": 2,
  "name": "Form-O-Fill - Developer Form Filler",
  "description": "This extension enables form filling via a simple button and is highly configurable via JSON. Targeted at web developers coping with long forms (eg. order processes)",
  "version": "1.0",
  "author": "formofillextension@gmail.com",
  "minimum_chrome_version": "33",
  "icons": { 
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "contextMenus",
    "notifications",
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_title": "Form-O-Fill",
    "default_icon": "images/icon_19.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [ 
        "vendor/jquery/jquery-2.1.1.min.js", 
        "js/global/utils.js", 
        "js/global/jsonf.js", 
        "js/global/rules.js", 
        "js/global/rule_storage.js", 
        "js/content/form_errors.js", 
        "js/content/form_filler.js", 
        "js/content/form_extractor.js", 
        "js/content/extract_instrumentation.js" ,
        "js/content/content.js" 
      ],
      "css": [
        "css/content.css"
      ]
    }
  ],
  "options_page": "html/options.html",
  "background": {
    "scripts": [
      "vendor/jquery/jquery-2.1.1.min.js", 
      "js/global/jsonf.js", 
      "js/global/utils.js", 
      "js/global/rule_storage.js", 
      "js/global/rules.js",
      "js/background/form_util.js",
      "js/background/notification.js",
      "js/background/background.js",
      "js/background/context_menu.js"
    ],
    "persistent": false
  }
}
